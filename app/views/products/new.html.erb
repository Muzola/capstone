<br />
<div class="booyah-box col-10 offset-1">
  <h1>Add a new product</h1>
  <%= simple_form_for @product, url: products_path do |f| %>
    <%= f.input :title %>
    <%= f.input :image %>
    <%= f.input :description %>
    <%= f.input :stock %>
    <%= f.input :cost %>
    <%= f.input :shipping %>
    <br />
    <%= f.submit "Create", class: 'btn btn-primary' %>
    <br />
  <% end %>
  <br />
</div>