<div class="booyah-box col-10 offset-1">
<h1 align="center">Shop</h1>
<hr/>
<br/>

  
<% @products.each do |product| %>
<div class="container-fluid">
    <div class="col-sm-4">
      <%= image_tag(product.image.to_s, class: 'list_image', size: '260x195') %><br/>
      <%= link_to product.title, product_path(product) %> <br/>
      $<%= product.cost.to_i %> <br/>
    </div>
  </div>
<% end %>   
 
</div>